<!DOCTYPE html>
<html>
<%- include('partials/head',{ title : "Cotizador de cortinas" }) %>

  <body>
    <%- include('partials/header') %>
      <main class="container">
        <section class="col-12 mt-5 mx-auto">
          <article class="card shadow">
            <div class="card-header">
              <h5>Nuevo presupuesto</h5>
            </div>
            <div class="card-body">
              <% items.forEach(({system,cloth,color, clothWidth, heigth, pattern, chain,support, reference, amount}) => { %>
                <form action="" class="row">
                  <div class="col-3 col-md-2 col-lg-1 mb-3">
                    <input type="number" class="form-control" id="quantity" placeholder="cantidad" value="1">
                  </div>
                  <div class="col-9 col-md-6 col-lg-3 mb-3">
                    <input type="text" class="form-control" id="system" placeholder="sistema" value="<%= system.name %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <input type="text" class="form-control" id="cloth" placeholder="tela" value="<%= cloth.name %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <input type="text" class="form-control" id="color" placeholder="color" value="<%= color.name  %>" readonly> 
                  </div>
                  <div class="col-6 col-md-6 col-lg-2 mb-3">
                    <input type="number" class="form-control" id="clothWidth" placeholder="ancho" value="<%= clothWidth %>" readonly>
                  </div>
                  <div class="col-6 col-md-6 col-lg-2 mb-3">
                    <input type="number" class="form-control" id="heigth" placeholder="alto" value="<%= heigth %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <input type="text" class="form-control" id="pattern" placeholder="modelo" value="<%= pattern.name %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <input type="number" class="form-control" id="chain" placeholder="cadena" value="<%= chain.name %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <input type="text" class="form-control" id="support" placeholder="soporte" value="<%= support.name %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <select class="form-select" id="command">
                      <option selected hidden>Comando</option>
                      <option value="der">Derecho</option>
                      <option value="izq">Izquierdo</option>
                    </select>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <select class="form-select" id="support-orientation">
                      <option selected hidden>Orient. soporte</option>
                      <option value="pared">Pared</option>
                      <option value="techo">Techo</option>
                    </select>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <select class="form-select" id="cloth orientation">
                      <option selected hidden>Orient. tela</option>
                      <option value="delante">Por delante</option>
                      <option value="detras">Por detr√°s</option>
                    </select>
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <input type="text" class="form-control" id="reference" placeholder="referencia" value="<%= reference %>" readonly>
                  </div>
                  <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <input type="text" class="form-control" id="observations" placeholder="observaciones">
                  </div>
                  <div class="col-12 col-md-6 col-lg-2 mb-3">
                    <input type="text" class="form-control" id="amount" placeholder="monto" value="<%= amount %>" readonly>
                  </div>
                  <div class="col-12">
                    <div class="d-flex justify-content-end ">
                      <a href="#" class="btn btn-outline-dark  me-2">Editar datos</a>
                    </div>
                  
                  </div>
                </form>
                <hr>
              <% }) %>
              
            </div>
          </article>
        </section>
      </main>
      <%- include('partials/footer') %>
        <%- include('partials/scripts') %>

  </body>

</html>