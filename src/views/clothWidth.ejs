<!DOCTYPE html>
<html>
<%- include('partials/head',{ title : "Cotizador de cortinas" }) %>

    <body>
        <%- include('partials/header') %>
            <main class="container">
                <section class="col-12 col-md-10 col-lg-8 mt-5 mx-auto">
                    <article class="card shadow position-relative">
                        <div class="card-header position-sticky top-0 bg-light d-flex py-4">
                            <div class="col-6 d-none d-md-flex align-items-center">
                                <a href="/information/cloth-width" class="text-decoration-none text-dark" title="Todas las Telas">
                                    <h5 class="m-0" >TELAS </h5>
                                </a>
                                <span class="small ms-2">(<%= total %>)</span>
                            </div>
                            <form action="/information/cloth-width/search" class="col-12 col-md-6">
                                <div class="position-relative">
                                    <input type="text" class="form-control py-2" id="search" placeholder="Buscar"
                                        name="search">
                                    <button class="btn btn-sm btn-dark-outline position-absolute end-0 top-0 me-3 mt-1"
                                        type="submit"><i class="fas fa-search"></i></button>
                                </div>
                            </form>
                        </div>
                        <div class="card-body">


                            <div class="row">

                                <% if (items.length> 0) { %>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="col-8">Tipo de Tela</th>
                                                <th scope="col" class="col-4">Ancho <span class="d-none d-md-inline">rollo </span>(mts)</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% items.forEach((item)=> { %>
                                                <tr>
                                                    <th scope="row">
                                                        âˆ˜  <%= item.name %>
                                                    </th>
                                                    <td>
                                                         <%= item.width %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% }else{ %>
                                        <p class="alert alert-warning mt-4 text-center">No hay resultados <%= keywords
                                                && 'para ' + keywords %>
                                        </p>
                                        <% } %>

                            </div>
                        </div>


                        </div>
                    </article>
                </section>
            </main>
            <%- include('partials/footer') %>
                <%- include('partials/scripts') %>
                <script src="/javascripts/information.js"></script>
    </body>

</html>