<!DOCTYPE html>
<html>
<%- include('partials/head',{ title : "Cotizador de cortinas" }) %>

  <body>
    <%- include('partials/header') %>
      <main class="container">
        <section class="col-12 col-md-10 col-lg-8 mt-5 mx-auto">
          <article class="card shadow">
            <div class="card-header">
              Nuevo Usuario
            </div>
            <div class="card-body">
              <form action="/users/store" method="POST" class="row needs-validation" novalidate>
                <div class="col-12 col-md-6">
                  <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" name="rolId">
                      <option selected hidden value="">Seleccione...</option>
                      <% rols.forEach(rol=> { %>
                        <option value="<%= rol.id %>">
                          <%= rol.name %>
                        </option>
                        <% }) %>
                    </select>
                    <label for="floatingSelect">Rol</label>
                  </div>
                </div>
                <div class="col-12 col-md-6 d-flex justify-content-between align-items-center">
                  <div class="form-floating  mb-3 w-50">
                    <input type="text" class="form-control" id="idLocal" name="idLocal" placeholder="ID Local">
                    <label for="idLocal">ID Local</label>
                  </div>
                  <span id="msg-error" class="text-danger text-small ms-2" hidden>El ID está en uso</span>
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="enabled" name="enabled">
                    <label class="form-check-label" for="enabled">Habilitado</label>
                  </div>
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <div class="form-floating ">
                      <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" required>
                      <label for="name">Nombre</label>
                    </div>
                    <span class="ms-1 text-danger">
                      <%= locals.errors && errors.name && errors.name.msg %>
                    </span>
                    <div class="invalid-feedback">
                      El nombre es requerido
                    </div>
                </div>
                <div class="col-12 col-md-6 mb-3">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="surname" name="surname" placeholder="Apellido" required>
                    <label for="surname">Apellido</label>
                  </div>
                  <span class="ms-1 text-danger">
                    <%= locals.errors && errors.surname && errors.surname.msg %>
                  </span>
                  <div class="invalid-feedback">
                    El apellido es requerido
                  </div>
                </div>
                <div class="col-12 col-md-6 mb-3">
                  <div class="form-floating ">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    <label for="email">Email</label>
                  </div>
                  <span class="ms-1 text-danger">
                    <%= locals.errors && errors.email && errors.email.msg %>
                  </span>
                  <div class="invalid-feedback">
                    El email es requerido
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <div class="form-floating">
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Teléfono">
                    <label for="phone">Teléfono</label>
                  </div>
                </div>

                <div class="col-12 col-md-6 mb-3">
                  <div class="form-floating ">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Usuario">
                    <label for="username">Usuario</label>
                  </div>
                  <span class="ms-1 text-danger" id="error-username"></span>
                </div>
                <div class="col-12 col-md-6 mb-3">
                  <div class="form-floating ">
                    <input type="text" class="form-control" id="password" name="password" placeholder="Contraseña">
                    <label for="password">Contraseña</label>
                  </div>
                </div>
                <div class="col-12 text-end">

                  <a href="/users" class="btn btn-secondary mx-1 mb-3">Cancelar</a>
                  <button type="submit" class="btn buttons__btn-custom mx-1 mb-3">Guardar</button>
                </div>

              </form>
            </div>
          </article>
        </section>
      </main>
      <%- include('partials/footer') %>
        <%- include('partials/scripts') %>
      <script src="/javascripts/userAdd.js"></script>
  </body>

</html>