<!DOCTYPE html>
<html>
<%- include('partials/head',{ title : "Cotizador de cortinas" }) %>

    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand border rounded bg-white px-3 px-md-4 pt-md-3 pt-sm-3 pb-2 pb-md-3"
                        href="/">
                        <img class="d-inline-block align-top mt-3" src="/images/logo-blancomad2.svg" alt="imagen">
                    </a>
                </div>
            </nav>
        </header>
        <main class="container">
            <section class="login__section">
                <article class="card shadow">
                    <div class="card-body ">
                        <h1>Cotizador de cortinas</h1>
                        <hr>
                        <form method="POST">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="Nombre de usuario" name="username" autocomplete="off">
                                <label for="floatingInput">Usuario</label>
                            </div>
                            
                            <div class="form-floating mb-3 d-flex align-items-center">
                                <input type="password" class="form-control pe-5" id="floatingPassword"
                                    placeholder="Password" name="password" autocomplete="off">
                                <label for="floatingPassword">Contrase√±a</label>

                                <span class="position-absolute top-25 end-0 mx-2 py-2 bg-white">
                                    <i class="fa fa-eye" id="icon-eye" onclick="seePass()"></i>
                                </span>
                            </div>

                            <div class="mb-3 text-center">
                                <span class="text-danger <%= locals.errors && 'alert alert-danger py-0' %> ">
                                    <%= locals.errors && errors.username && errors.username.msg %>
                                </span>

                            </div>
                            <div class="">
                                <button type="submit" class="btn buttons__btn-custom w-100">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </article>
            </section>
        </main>
        <%- include('partials/footer') %>
            <%- include('partials/scripts') %>
                <script src="/javascripts/seePassword.js"></script>

    </body>

</html>